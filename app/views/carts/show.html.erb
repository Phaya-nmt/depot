<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<%= render(@cart) %>
<div class="cart_title">カート</div>
<table>
<%= render(@cart.line_items) %>

  <tr class="total_line">
    <td colspan="3">合計</td>
    <td class="total_cell"><%= number_to_currency(@cart.total_price) %></td>
  </tr>

</table>
<%= link_to 'Edit', edit_cart_path(@cart) %> |
<%= link_to 'Back', carts_path %> |
<%= link_to 'catalogue', store_path %>
<p>
<%= button_to "チェックアウト", new_order_path, method: :get %>
<%= button_to "カートを空にする", @cart, method: :delete, confirm: "本当に良いですか？" %>
</p>